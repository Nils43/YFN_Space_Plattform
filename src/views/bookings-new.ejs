<!doctype html>
<html lang="de">
<head>
  <meta charset="utf-8"/>
  <title><%= title || 'Jetzt buchen' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <link rel="stylesheet" href="/styles.css"/>
</head>
<body>
  <header class="brand">
    <div class="brand-left">
      <img src="/YFN.svg" alt="YFN" class="logo">
      <h2>Young Founders Network</h2>
    </div>
    <nav class="nav">
      <a href="/">Home</a>
      <a href="/resources">Ressourcen</a>
      <a href="/bookings/new" class="active">Jetzt buchen</a>
      <a href="/me/bookings">Meine Buchungen</a>
    </nav>
  </header>

  <main class="container">
    <h1>Jetzt buchen</h1>

    <% if (error) { %>
      <div class="alert"><%= error %></div>
    <% } %>

    <form method="post" action="/bookings" class="form">
      <label>Dein Name
        <input name="user_name" value="<%= (values && values.user_name) || '' %>" required>
      </label>

      <label>Ressource
        <select name="resource_id" required>
          <% resources.forEach(r => { %>
            <option value="<%= r.id %>" <%= values && String(values.resource_id)===String(r.id) ? 'selected' : '' %>>
              <%= r.name %> — <%= r.type %>
            </option>
          <% }) %>
        </select>
      </label>

      <label>Start
        <input type="datetime-local" name="start_at" value="<%= (values && values.start_at) || '' %>" required>
      </label>

      <label>Ende
        <input type="datetime-local" name="end_at" value="<%= (values && values.end_at) || '' %>" required>
      </label>

      <button type="submit" class="btn btn-primary">Buchen</button>
    </form>
  </main>

  <footer class="footer">© 2025 YFN — DeskHub</footer>
</body>
</html>
